<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= locals.title %></title>
    <meta name="description" content="<%= locals.description %>" />
    <link rel="stylesheet" href="/css/style.css" />
    <script type="text/javascript" defer src="/js/script.js"></script>
  </head>
  <body>
    <%- include('partials/search.ejs') %>
    <div class="container">
      <%- include('partials/header.ejs') %> <% if (success_msg &&
      success_msg.length > 0) { %>
      <div class="flash flash-success"><%= success_msg[0] %></div>
      <% } %> <% if (error_msg && error_msg.length > 0) { %>
      <div class="flash flash-error"><%= error_msg[0] %></div>
      <% } %>

      <main class="main"><%- body %></main>
      <%- include('partials/footer.ejs') %>
    </div>
  </body>
</html>
