<h2>Edit Post</h2>
<form
  action="/edit-post/<%= data._id %>?_method=PUT"
  method="POST"
  class="form-post"
>
  <input type="text" name="title" value="<%= data.title %>" required />
  <textarea name="body" rows="8" required class="textarea">
<%= data.body %></textarea
  >
  <input type="submit" value="Update Post" class="btn btn-edit update-btn" />
</form>
<form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
  <input
    type="submit"
    value="Delete Post"
    class="btn btn-delete delete-update"
  />
</form>
